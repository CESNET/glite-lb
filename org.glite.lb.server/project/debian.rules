#!/usr/bin/make -f
# -*- makefile -*-

p_base=glite-lb-server
p_dbg=glite-lb-server-dbg

-include /usr/share/dpkg/buildflags.mk

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# condor classads requires 2011 ISO C++ standard since Debian 8 jessie
classad_version=$(shell dpkg-query -W libclassad0-dev libclassad-dev | cut -f2)
classad_cxxflags=$(shell if dpkg --compare-versions $(classad_version) '>=' '8'; then echo '-std=c++11'; fi)

configure: configure-stamp
configure-stamp:
	dh_testdir
	/usr/bin/perl ./configure --root=/ --prefix=/usr --libdir=lib --docdir=/usr/share/doc/$(p_base) --mysqlconfdir=/etc/mysql/conf.d --project=emi
	touch $@

build: build-arch build-indep

build-arch build-indep: build-stamp

build-stamp: configure-stamp
	dh_testdir
	CPPFLAGS="$(CPPFLAGS)" CFLAGS="$(CFLAGS)" CXXFLAGS="(CXXFLAGS) $(classad_cxxflags)" LDFLAGS="$(LDFLAGS)" $(MAKE)
	CPPFLAGS="$(CPPFLAGS)" CFLAGS="$(CFLAGS)" CXXFLAGS="(CXXFLAGS) $(classad_cxxflags)" LDFLAGS="$(LDFLAGS)" $(MAKE) check
	touch $@

clean: configure-stamp
	dh_testdir
	dh_testroot
	rm -f configure-stamp build-stamp debian/glite-lb-bkserverd.init
	$(MAKE) clean
	rm -f Makefile.inc config.status *.spec
	dh_clean

install: build-stamp
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	$(MAKE) install DESTDIR=$(CURDIR)/debian/tmp
	rm -vf debian/tmp/usr/lib/*.la
	rm -vf debian/tmp/usr/lib/*.a
	find debian/tmp -name '*' -print | xargs -I {} -i bash -c "chrpath -d {} > /dev/null 2>&1" || echo 'Stripped RPATH'
	mkdir -p debian/$(p_base)/usr/share/doc
	mv debian/tmp/usr/share/doc/$(p_base) debian/$(p_base)/usr/share/doc/$(p_base)
	mkdir -p debian/$(p_dbg)/usr/share/doc
	ln -s $(p_base) debian/$(p_dbg)/usr/share/doc/$(p_dbg)
	rm -rf debian/tmp/etc/init.d
	cp -p config/startup.debian.bkserverd debian/glite-lb-bkserverd.init

binary-indep:

binary-arch: install
	dh_testdir
	dh_testroot
	dh_installchangelogs project/ChangeLog
	dh_installdocs
	dh_installexamples
	dh_installman
	dh_installlogrotate
	dh_installinit --name=glite-lb-bkserverd
	dh_installcron
	dh_install --fail-missing
	dh_link
	dh_strip --dbg-package=$(p_dbg)
	dh_compress
	dh_fixperms
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-arch binary-indep
