#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
-include /usr/share/dpkg/buildflags.mk

p_base=emi-lb-nagios-plugins

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

%:
	dh $@ --parallel --fail-missing

override_dh_auto_configure:
	perl ./configure --root=/ --prefix=/usr --libdir=lib --project=emi

override_dh_auto_clean:
	make clean

override_dh_clean:
	dh_clean
	rm -vf Makefile.inc config.status *.spec

override_dh_installchangelogs:
	dh_installchangelogs project/ChangeLog

override_dh_fixperms:
	dh_fixperms
	chmod 0755 debian/$(p_base)/usr/libexec/grid-monitoring/probes/emi.lb
