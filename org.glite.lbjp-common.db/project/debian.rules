#!/usr/bin/make -f

DPKG_EXPORT_BUILDFLAGS = 1
-include /usr/share/dpkg/buildflags.mk

p_dbg=libglite-lbu-db3-dbg
p_dev=libglite-lbjp-common-db-dev
p_lib=libglite-lbu-db3

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

%:
	dh $@ --parallel --fail-missing

override_dh_auto_configure:
	perl ./configure --root=/ --prefix=/usr --libdir=lib --project=emi
	# heimdal: sed -i.orig -e 's/postgresql_prefix.*/postgresql_prefix = no/' Makefile.inc

override_dh_auto_clean:
	make clean

override_dh_clean:
	dh_clean
	rm -vf Makefile.inc config.status *.spec

override_dh_strip:
	dh_strip --dbg-package=$(p_dbg)

override_dh_auto_install:
	dh_auto_install
	rm -vf debian/tmp/usr/lib/*.la

override_dh_installdocs:
	dh_installdocs --link-doc=$(p_lib)

override_dh_installchangelogs:
	dh_installchangelogs project/ChangeLog
