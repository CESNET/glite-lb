				#libxml2 => 'libxml2-dev',
				#openssl => 'libssl-dev',
				#'tetex-latex' => 'texlive-latex-extra',
				#libxslt=>'xsltproc',
				#'httpd-devel' => 'apache2-prefork-dev',
				#'fuse-devel' => 'libfuse-dev',
