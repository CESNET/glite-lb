        <!-- category name="LB.INTERLOGD" priority="debug" appender="stdout"/-->
        <!-- category name="LB.SERVER" priority="debug" appender="stdout"/-->

        <!-- default appenders ===================================== -->
        <appender name="stdout" type="stream" layout="basic"/>
        <appender name="stderr" type="stream" layout="basic"/>
        <appender name="syslog" type="syslog" layout="dated"/>

        <!-- default layouts ======================================= -->
        <layout name="basic" type="basic"/>
        <layout name="dated" type="dated"/>
